{
  "name": "yt-overlay",
  "version": "2025.12.6",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.overlay.app",
    "productName": "YouTubeOverlay",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    }
  },
  "dependencies": {
    "express": "^5.2.1"
  }
}
